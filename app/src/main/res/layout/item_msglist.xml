<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/item_img_msglv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_img_msglv_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试员工"
            android:textColor="#141414"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_txt_recent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试消息" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_txt_recent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="10:47:36" />

</RelativeLayout>